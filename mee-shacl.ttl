@prefix :      <http://www.example.org#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix bfo:   <http://purl.obolibrary.org/obo/BFO_> .
@prefix cco:   <http://www.ontologyrepository.com/CommonCoreOntologies/> .
@prefix mee:   <http://www.mee.foundation/ontologies/mee#> .

:SSNShape
    a sh:NodeShape ;
    sh:targetClass cco:SocialSecurityNumber ;
    sh:property [
        sh:path cco:has_string_value ;
        sh:datatype xsd:string ;
        sh:pattern "^\\d{3}-\\d{2}-\\d{4}$" ;
    ] .

:LegalNameShape
    a sh:NodeShape ;
    sh:targetClass cco:PersonName ;  # applies to all names, including LegalName and Alias

    # must have at least one GivenName
    sh:property [
        sh:path cco:has_part ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedValueShape [
            sh:class cco:GivenName
        ] ;
        sh:qualifiedMaxCount 2  # optional: for middle name as second given name
    ] ;

    # may have one optional MiddleName
    sh:property [
        sh:path cco:has_part ;
        sh:qualifiedMinCount 0 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [
            sh:class cco:MiddleName
        ] ;
    ] ;

    # must have exactly one FamilyName
    sh:property [
        sh:path cco:has_part ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [
            sh:class cco:FamilyName
        ] ;
    ] .

:PersonShape
    a sh:NodeShape ;
    sh:targetClass cco:Person ; 

    sh:property [
        sh:path bfo:bearer_of;
        sh:or (
	        [ sh:class cco:LegalName ]   
	        [ sh:class cco:Alias ]   
        ) ;
    ] ;
    sh:property [
        sh:path cco:has_designator ;
        sh:or (
	        [ sh:class cco:TelephoneNumber ]   
	        [ sh:class cco:SocialSecurityNumber ]   
        ) ;
    ] ;

  
    sh:closed true ;
    sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) ;
    .